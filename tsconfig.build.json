{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "declaration": true,
    "sourceMap": true,
    "types": ["node", "jest"]
  },
  "include": [
    "cli/**/*.mjs",
    "cli.mjs"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "dist"
  ]
} 